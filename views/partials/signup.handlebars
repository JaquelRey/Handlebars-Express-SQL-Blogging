<div id="modal2" class="modal">
  <div class="modal-content blue-grey darken-2">
    <div class="row">
      <form class="col s12 card-panel blue-grey lighten-4" id="signup-form">
        <div class="row">
          <div class="input-field col s12">
            <input
              placeholder="User"
              id="name-input-signup"
              type="text"
              class="validate"
            />
            <label for="name-input-signup">Username</label>
          </div>
          <div class="input-field col s12">
            <input
              placeholder="password"
              id="pw-input-signup"
              type="password"
              class="validate"
            />
            <label for="pw-input-signup">Password</label>
          </div>
        </div>
        <a
          href="#"
          type="button"
          data-target="modal1"
          class="btn modal-trigger waves-effect waves-blue btn-flat deep-orange darken-4 teal-text text-lighten-5"
        >Have an Account? Login</a>
        <button
          type="submit"
          name="action"
          id="signup-button"
          class="waves-effect waves-green btn-flat deep-orange darken-3 teal-text text-lighten-5"
        >Sign up</button>
      </form>
    </div>
  </div>
</div>
<script src="/js/signup.js"></script>